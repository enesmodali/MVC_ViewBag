@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top:50px;">

    <div class="panel panel-default">

        <div class="panel-body">
            <div class="col-lg-12" >

                <div class="col-lg-6" >
                    <h3>ViewBag</h3>
                    <div class="panel panel-default">

                        <div class="panel-body" >
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Kategori ID</th>
                                    <th>Kategori Adı</th>
                                    <th>Kategori Açıklaması</th>

                                </tr>

                                </thead>
                                <tbody>
                                    @{ 
                                        foreach (var item in ViewBag.KategoriListesi)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.KategoriAdi</td>
                                                <td>@item.Aciklama</td>
                                                
                                                
                                            </tr>
                                        }

                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


</div>